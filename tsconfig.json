{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "dist/",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "allowJs": true,
    "rootDir": "app",
    "typeRoots": [
      "node_modules/@types",
      "types.d.ts"
    ],
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ]
  },
  "exclude": [
    "./node_modules"
  ]
}